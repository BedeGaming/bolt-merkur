<h1>{{translate "log_in"}}</h1>
<form novalidate>
  <div class="input-container login-field">
    <input name="username"
           type="text"
           autocomplete="off"
           autocorrect="off"
           autocapitalize="off"
           spellcheck="false"
           value="{{username}}"
           placeholder=""
           aria-label="{{translate 'username_placeholder'}}"
           required />
    <label><span>{{translate "username_placeholder"}}</span></label>
    <div class="validation-icon"><svg viewBox="0 0 16 12"><use xlink:href="#icon-tick"/></svg></div>
  </div>

  <div class="input-container password-field">
    <input name="password"
           type="password"
           autocomplete="off"
           autocorrect="off"
           autocapitalize="off"
           class="peeky"
           spellcheck="false"
           placeholder=""
           aria-label="{{translate 'password_placeholder'}}"
           data-hj-masked
           required />
    <button type="button" class="peeky-password" aria-label="{{translate 'toggle_show_password'}}">
      <svg focusable="false" class="open" viewBox="0 0 17.2 10.3"><use xlink:href="#icon-eye-open-icon"/></svg>
      <svg focusable="false" class="close" viewBox="0 -5 32 25"><use xlink:href="#icon-eye-closed-icon"/></svg>
    </button>
    <label><span>{{translate "password_placeholder"}}</span></label>
    <div class="validation-icon"><svg viewBox="0 0 16 12"><use xlink:href="#icon-tick"/></svg></div>
  </div>

  <div>
    <button type="button" class="forgot-password">{{translate "forgot_password"}}</button>
  </div>

  <terms-updated></terms-updated>

  <footer>
    <button type="submit" class="primary-action">
      <span>
        <div class="spinner"></div>
        {{translate "log_in"}}
      </span>
    </button>
  </footer>
  <button class="register">{{{translate "register_new_user"}}}</button>
  <a href="/close-my-account" class="close-account" target="_blank">{{translate "terms_i_dont_agree"}}</a>
</form>
