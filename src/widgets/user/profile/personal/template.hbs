<h2>{{translate "profile_details_title"}}</h2>
<div class="spinner {{isSyncing}}">
</div>
<section class="user-details {{isSyncing}}" data-hj-masked>
  <div>
    <h3>{{translate "name"}}</h3>
    <p>{{firstname}} {{lastname}}</p>
    <h3>{{translate "address"}}</h3>
    <p>{{addressLine1}}</p>
    {{#if addressLine2}}
      <p>{{addressLine2}}</p>
    {{/if}}
    <p>{{town}}</p>
    {{#if county}}
      <p>{{county}}</p>
    {{/if}}
    <p>{{postCode}}</p>
    <h3>{{translate "telephone"}}</h3>
    <p class="{{telephoneClass}}">
      {{#if telephone}}
      {{telephone}}
      {{else}}
      {{translate "undisclosed"}}
      {{/if}}
    </p>
  </div>
  <div>
    <h3>{{translate "dob_label"}}</h3>
    <p>{{dateOfBirth}}</p>
    <h3>{{translate "gender"}}</h3>
    <p class="{{genderClass}}">
      {{#if gender}}
        {{gender}}
      {{else}}
        {{translate "undisclosed"}}
      {{/if}}
    </p>
  </div>
</section>
<section class="user-updates">
  <div class="updates-buttons">
    <button class="btn updated-contacts">{{translate "update_details"}}</button>
    <button class="btn change-password">{{translate "change_password"}}</button>
  </div>
  <small>
    {{translate "change_address_contact"}} <a href="{{supportUrl}}" rel="{{supportRel}}" title="{{translate
      "support"}}">{{translate "support"}}</a>. {{translate "set_limits"}} <a href="/account/responsible-gambling" title="{{translate "responsible_gambling"}}">{{translate "responsible_gambling"}}.</a>
  </small>
</section>
