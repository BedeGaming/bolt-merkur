<h1>{{translate "change_password"}}</h1>
<form novalidate autocomplete="new-password">
  <label class="fake-safari-password">
    <input type="password" autocomplete="new-password">
  </label>
  <div class="input-container">
    {{!-- type text/autocomplete chrome workaround v53.0.2785 --}}
    <input name="currentPassword"
           id="currentPassword"
           type="password"
           class="no-autofill peeky"
           autocomplete="new-password"
           autocorrect="off"
           autocapitalize="off"
           spellcheck="false"
           value=""
           placeholder=""
           data-hj-masked
           required />
    <button type="button" class="peeky-password">
      <svg focusable="false" class="open" viewBox="0 0 17.2 10.3"><use xlink:href="#icon-eye-open-icon"/></svg>
      <svg focusable="false" class="close" viewBox="0 -5 32 25"><use xlink:href="#icon-eye-closed-icon"/></svg>
    </button>
    <label for="currentPassword">{{translate "current_password"}}</label>
    <div class="validation-icon"><svg viewBox="0 0 16 12"><use xlink:href="#icon-tick"/></svg></div>
  </div>
  <div class="input-container">
    <input name="newPassword"
           id="newPassword"
           type="password"
           autocomplete="new-password"
           autocorrect="off"
           class="peeky"
           autocapitalize="off"
           spellcheck="false"
           value=""
           placeholder=""
           data-hj-masked
           required />
    <button type="button" class="peeky-password">
      <svg focusable="false" class="open" viewBox="0 0 17.2 10.3"><use xlink:href="#icon-eye-open-icon"/></svg>
      <svg focusable="false" class="close" viewBox="0 -5 32 25"><use xlink:href="#icon-eye-closed-icon"/></svg>
    </button>
    <label for="newPassword">{{translate "new_password"}}</label>
    <div class="validation-icon"><svg viewBox="0 0 16 12"><use xlink:href="#icon-tick"/></svg></div>
  </div>
  <div class="input">
    <input name="newPasswordRepeat"
           id="newPasswordRepeat"
           type="password"
           autocomplete="new-password"
           autocorrect="off"
           autocapitalize="off"
           class="peeky"
           spellcheck="false"
           value=""
           placeholder=""
           data-hj-masked
           required />
    <button type="button" class="peeky-password">
      <svg focusable="false" class="open" viewBox="0 0 17.2 10.3"><use xlink:href="#icon-eye-open-icon"/></svg>
      <svg focusable="false" class="close" viewBox="0 -5 32 25"><use xlink:href="#icon-eye-closed-icon"/></svg>
    </button>
    <label for="newPasswordRepeat">{{translate "confirm_password"}}</label>
    <div class="validation-icon"><svg viewBox="0 0 16 12"><use xlink:href="#icon-tick"/></svg></div>
  </div>
  <footer>
    <button type="submit" class="update-password">
      <span>
        <svg class="spinner" width="15px" height="15px" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
          <circle class="path" fill="none" stroke-width="6" stroke-linecap="round" cx="33" cy="33" r="30"></circle>
        </svg>
        {{translate "update"}}
      </span>
    </button>
  </footer>
</form>
